<config>
    <modules>
        <Demarsico_RegionManagerPlus>
            <version>0.0.7</version>
        </Demarsico_RegionManagerPlus>
    </modules>
    <global>
        <blocks>
            <demarsico_regionmanagerplus>
                <class>Demarsico_RegionManagerPlus_Block</class>
            </demarsico_regionmanagerplus>
        </blocks>
        <helpers>
            <demarsico_regionmanagerplus>
                <class>Demarsico_RegionManagerPlus_Helper</class>
            </demarsico_regionmanagerplus>
             <directory>
                <rewrite>
                    <data>Demarsico_RegionManagerPlus_Helper_Directorydata</data>
                </rewrite>
            </directory>
        </helpers>
        <models>
            <demarsico_regionmanagerplus>
                <class>Demarsico_RegionManagerPlus_Model</class>
                <resourceModel>demarsico_regionmanagerplus_resource</resourceModel>
            </demarsico_regionmanagerplus>
            <demarsico_regionmanagerplus_resource>
                <class>Demarsico_RegionManagerPlus_Model_Resource</class>
                <entities>
                    <region>
                        <table>directory_country_region</table>
                    </region>
                </entities>
            </demarsico_regionmanagerplus_resource>
        </models>
        <resources>
            <demarsico_regionmanagerplus_setup>
                <setup>
                    <module>Demarsico_RegionManagerPlus</module>
                </setup>
            </demarsico_regionmanagerplus_setup>
        </resources>          
    </global>
    <admin>
        <routers>
            <demarsico_regionmanagerplus>
                <use>admin</use>
                <args>
                    <module>Demarsico_RegionManagerPlus</module>
                    <frontName>regionmanagerplus</frontName>
                </args>
            </demarsico_regionmanagerplus>
        </routers>
    </admin>
    <default>
        <demarsico>
            <regionmanagerplus>                
                <api_url>http://api.demarsico.net/magento/ws/</api_url>
                <api_url_dev>http://mageapi.local/magento/ws/</api_url_dev>         
            </regionmanagerplus>      
        </demarsico>
    </default>
    <adminhtml>
        <layout>
            <updates>
                <demarsico_regionmanagerplus>
                    <file>demarsico_regionmanagerplus.xml</file>
                </demarsico_regionmanagerplus>
            </updates>
        </layout>
        <translate>
            <modules>
                <Demarsico_RegionManagerPlus>
                    <files>
                        <default>Demarsico_RegionManagerPlus.csv</default>
                    </files>
                </Demarsico_RegionManagerPlus>
            </modules>
        </translate>
    </adminhtml>
</config>
